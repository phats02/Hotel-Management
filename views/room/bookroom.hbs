<div class="container-fluid">
    <div class="d-flex flex-column" style="max-height:90vh;">
            <div class="card m-4 shadow" style="max-height:100%; overflow: auto">
                <div class="alert shadow alert-light col-md-11 ms-5 mt-3 " style="color:#4B85A6" role="alert">
                    <div class="d-inline ">Book Room {{id}}</div>

                    <div class="d-inline float-end" style=" ">
                        {{!-- <button type="submit " class="btn btn-success " style="height:31px;text-align:right">
                            <a class="nav-link active" href="room/bookroom">
                                <h5 style="font-size:1em">View all</h5>
                            </a>
                        </button> --}}
                    </div>
                </div>

                {{#if error}}
                <div class="alert alert-danger d-flex align-items-center" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:">
                        <use xlink:href="#exclamation-triangle-fill" />
                    </svg>
                    <div>
                        {{error}}
                    </div>
                </div>
                {{/if}}
                <form method="POST" action="/room2" style="">
                    <input type="text" name="RoomID" value="{{id}}" hidden>
                    <div class="input-group  ms-5 tourinput " style="width:91.5%;">
                        <span class="input-group-text" style="background-color:#FFFFFF">From <span
                                class="star">*</span></span>

                        <input type="date" aria-label="from" name="from" class="form-control"
                            style="background-color:#FFFFFF" value="{{NgayDen_Input}}">
                    </div>
                    <div class="input-group  ms-5 tourinput " style="width:91.5%;">
                        <span class="input-group-text" style="background-color:#FFFFFF">To <span
                                class="star">*</span></span>

                        <input type="date" aria-label="to" name="to" class="form-control"
                            style="background-color:#FFFFFF" value="{{NgayDi_Input}}">
                    </div>
                    <div class="input-group  ms-5 tourinput " style="width:91.5%;">
                        <span class="input-group-text" style="background-color:#FFFFFF">Special requirement<span
                                class="star">*</span></span>

                        <input type="text" aria-label="email" name="specialrequirement" class="form-control"
                            style="background-color:#FFFFFF">
                    </div>
                    <div style="text-align: center;">
                        <div class="form-check form-check-inline " style="text-align: left;">
                            <input class="form-check-input " type="radio" name="cc" id="customer" value="Customer"
                                checked>
                            <label class="form-check-label" for="inlineRadio1">Customer</label>
                        </div>
                        <div class="form-check form-check-inline " style="text-align: right;">
                            <input class="form-check-input" type="radio" name="cc" id="tourist" value="Tourist">
                            <label class="form-check-label" for="inlineRadio2">Tourist</label>
                        </div>
                    </div>

                    <div style="background-color:darkgrey; max-height: 45vh;overflow-x: hidden;overflow-y: scroll;">
                        <div class="input-group  ms-5 tourinput pt-4 d-flex justify-content-between" style="width:90%;">

                            <input type="text" aria-label="email" name="phone" class="form-control"
                                placeholder="&#xF002; Find"
                                style="font-family:Aclonica, FontAwesome;background-color:#FFFFFF;">
                            </input>
                            <button class="" style="text-align=right; background-color: darkgrey; border:none">
                                <i class="fa-sharp fa-solid fa-user-plus "
                                    style="color:rgb(57, 244, 73); font-size: 30px;"></i>
                            </button>

                        </div>
                        <div class="row justify-content-center pt-4">
                            <div class="col-11" id="customer-table-body">
                                <table class="table table-bordered"
                                    style=" text-align:center; max-width = 100vw; border:#333; background-color:#FFFFFF;">
                                    <div>
                                        <thead>
                                            <th style="font-size: 30px;">#</th>
                                            <th><i class="fa-solid fa-user-tie" style="font-size: 30px;"></i></th>
                                            <th><i class="fa-solid fa-location-dot" style="font-size: 30px;"></i></th>
                                            <th><i class="fa-solid fa-phone" style="font-size: 30px;"></i></th>
                                            <th><i class="fa-solid fa-id-card" style="font-size: 30px;"></i></th>
                                        </thead>
                                        {{#each customer}}
                                        <tbody>
                                            <tr onclick="toggleHover(this)">

                                                <td>{{MaKH}}</td>
                                                <td>{{HoTen}}</td>
                                                <td>{{DiaChi}}</td>
                                                <td>{{SDT}}</td>
                                                <td>{{SoFAX}}</td>
                                                {{/each}}
                                                <input type="text" name="MaKH" hidden value="{{MaKH}}">
                                            </tr>
                                        </tbody>
                                    </div>
                                </table>
                            </div>
                            <div class="col-11" id="tourist-table-body">
                                <table class="table table-bordered"
                                    style=" text-align:center; max-width = 100vw; border:#333; background-color:#FFFFFF;">
                                    <thead>
                                        <th style="font-size: 30px;">#</th>
                                        <th>Tourist's Name</th>
                                        <th>Registrant's name</th>
                                        <th>Num</th>
                                    </thead>
                                    {{#each Doan}}
                                    <tbody>
                                        <tr onclick="toggleHover(this)">

                                            <td>{{MaDoan}}</td>
                                            <td>{{TenDoan}}</td>
                                            <td>{{TenNguoiDangKy}}</td>
                                            <td>{{SoNguoi}}</td>
                                            {{/each}}
                                            <input type="text" name="MaD" hidden value="{{MaDoan}}">
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div style="height:3em">
                        <button type="submit " class="btn btn-success mt-1"
                            style=" position:relative;left:90%;width:7%;height:31px;text-align:center;top:0.4em">

                            <a class="nav-link active" href="">
                                <h5 style="font-size:1em">Book</h5>
                            </a>

                        </button>
                    </div>
                </form>

            </div>
        </div>
</div>
</div>
<style>
    .star {
        color: red
    }

    .tourinput {
        width: 91.5%;
        height: 60px;
    }

    .input-group-text {

        width: 25%;

    }

    .okbutton {
        height: 47px;
        width: 149px;
        background-color: #F4EBEB;
        border-radius: 27px;
        margin-left: 500px;
        background-color: #E5E9F3;
        border: 2px solid #1125DD;
        font-family: 'Aclonica';
        text-decoration: none;
        transition: all 200ms;


    }

    .signin {
        font-family: 'Roboto';

    }

    .customer-row:hover {
        background-color: #4B85A6;
        /* Add any other styles you want for the hover effect */
    }

    .overlay {
        position: fixed;

        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.7);
        transition: opacity 500ms;
    }

    .overlay:target {
        visibility: visible;
        opacity: 1;
    }


    tr.hover-row {
        background-color: #4B85A6;
        cursor: pointer;
    }
</style>
<script>
    function toggleHover(element) {
        toggleRow = document.querySelector('.hover-row');
        if (toggleRow) toggleRow.classList.toggle('hover-row')
        element.classList.toggle('hover-row')
        var cc1 = document.getElementById("customer")
        var cc2 = document.getElementById("tourist")
        var input1 = document.querySelector('input[name="MaKH"]');
        var input2 = document.querySelector('input[name="MaD"]');
        if (cc1.checked) {
            input2.value=""
            var maKH = element.cells[0].textContent;
            input1.value = maKH;
        }
        if (cc2.checked) {
            input1.value=""
            var maD = element.cells[0].textContent;
            input2.value = maD;
        }
    }
    document.getElementById("customer-table-body").style.display = "block";
    document.getElementById("tourist-table-body").style.display = "none"
    // Xử lý sự kiện khi lựa chọn thay đổi
    document.getElementById("customer").addEventListener("change", function () {
        if (this.checked) {
            document.getElementById("customer-table-body").style.display = "block";
            document.getElementById("tourist-table-body").style.display = "none"
        }
    });
    document.getElementById("tourist").addEventListener("change", function () {
        if (this.checked) {
            document.getElementById("customer-table-body").style.display = "none";
            document.getElementById("tourist-table-body").style.display = "block";
        }
    });
</script>