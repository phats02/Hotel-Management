<div class="container-fluid">
    <div class="d-flex flex-column mb-3">
        <div class="p-2 ">
            <div class="card mx-auto mb-2 shadow" style="max-width: 80%;max-height:700px">
                <div class="row g-0">
                    <div class="alert shadow alert-light col-md-11 ms-5 mt-3" style="color:#4B85A6" role="alert">
                        Add customer for tour
                    </div>
                    {{#if error}}
                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:">
                            <use xlink:href="#exclamation-triangle-fill" />
                        </svg>
                        <div>
                            {{error}}
                        </div>
                    </div>
                    {{/if}}
                    <form method="POST" action="">

                        <div class="input-group  ms-5 tourinput " style="width:91.5%;">
                            <span class="input-group-text" style="background-color:#FFFFFF">First name <span
                                    class="star">*</span></span>

                            <input type="text" aria-label="First name" name="firstname" class="form-control"
                                style="background-color:#FFFFFF">
                        </div>
                        <div class="input-group  ms-5 tourinput " style="width:91.5%;">
                            <span class="input-group-text" style="background-color:#FFFFFF">Email <span
                                    class="star">*</span></span>

                            <input type="text" aria-label="email" name="email" class="form-control"
                                style="background-color:#FFFFFF">
                        </div>
                        <div class="input-group  ms-5 tourinput " style="width:91.5%;">
                            <span class="input-group-text" style="background-color:#FFFFFF">Phone<span
                                    class="star">*</span></span>

                            <input type="text" aria-label="email" name="phone" class="form-control"
                                style="background-color:#FFFFFF">
                        </div>
                        <div class="input-group  ms-5 tourinput " style="width:91.5%;">
                            <span class="input-group-text" style="background-color:#FFFFFF">Start time
                            </span>

                            <input type="text" name="timestart" class="form-control" value="{{timestart}}"
                                style="background-color:#FFFFFF">

                        </div>
                        <div class="input-group  ms-5 tourinput " style="width:91.5%;">
                            <span class="input-group-text" style="background-color:#FFFFFF">Moving </span>


                            <div class="form-control " style="background-color:#FFFFFF">
                                <div class="form-check form-check-inline " style="text-align: left;">
                                    <input class="form-check-input " type="radio" name="vehicle" id="inlineRadio1"
                                        value="Customer Vehicle">
                                    <label class="form-check-label" for="inlineRadio1">Customer Vehicle</label>
                                </div>
                                <div class="form-check form-check-inline " style="text-align: right;">
                                    <input class="form-check-input" type="radio" name="vehicle" id="inlineRadio2"
                                        value="Hotel Vehicle" checked>
                                    <label class="form-check-label" for="inlineRadio2">Hotel Vehicle</label>
                                </div>

                            </div>

                        </div>
                        <div class="input-group  ms-5 tourinput " style="width:91.5%;">
                            <span class="input-group-text" style="background-color:#FFFFFF">Number of
                                participants
                                <span class="star">*</span></span>

                            <input type="text" name="no_ofparticipants" aria-label="no_ofparticipants"
                                class="form-control" style="background-color:#FFFFFF">
                        </div>
                        <div class="input-group  ms-5  tourinput " style="width:91.5%;">
                            <span class="input-group-text" style="background-color:#FFFFFF">Special need <span
                                    class="star"></span></span>

                            <input type="text" aria-label="specialneed" name="speacialneed" class="form-control"
                                style="background-color:#FFFFFF">
                        </div>
                        <button type="submit " class="btn btn-success mt-1"
                            style=" position:relative;left:86%;width:10%;height:31px;text-align:center">

                            <a class="nav-link active">
                                <h5>Add</h5>
                            </a>
                        </button>
                    </form>
                    <div id="popupregister" class="overlay" style=" visibility: hidden; opacity: 0;">
                        <div class="popup">
                            <h2>Added Successfully</h2>
                            <a class="close" href="/tour">&times;</a>

                            <button class=" okbutton"><a class="nav-link active" href="/tour">YES</a></button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>
<style>
    .star {
        color: red
    }

    .tourinput {
        width: 91.5%;
        height: 60px;
    }

    .input-group-text {

        width: 25%;

    }

    .okbutton {
        height: 47px;
        width: 149px;
        background-color: #F4EBEB;
        border-radius: 27px;
        margin-left: 500px;
        background-color: #E5E9F3;
        border: 2px solid #1125DD;
        font-family: 'Aclonica';
        text-decoration: none;
        transition: all 200ms;


    }

    .signin {
        font-family: 'Roboto';

    }

    .overlay {
        position: fixed;

        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.7);
        transition: opacity 500ms;
    }

    .overlay:target {
        visibility: visible;
        opacity: 1;
    }

    .popup {
        width: 100px;
        height: 30%;
        margin: 390px;
        bottom: 200px;
        padding: 100px;
        background: #4FC27D;
        border-radius: 5px;
        width: 50%;
        position: relative;
        transition: all 3s ease-in-out;
        text-align: center;

    }

    .popup h2 {
        margin-top: 0;
        color: black;
        font-family: 'Aclonica';
    }

    .popup .close {
        position: absolute;
        top: 20px;
        right: 30px;
        transition: all 200ms;
        font-size: 30px;
        font-weight: bold;
        text-decoration: none;
        color: #333;
    }

    .popup .close:hover {
        color: #06D85F;
    }

    .popup .content {
        max-height: 30%;
        overflow: auto;
    }
</style>
<script>
    function showNav() {
        var nav = document.getElementById("header");
        nav.style.display = "flex";
    }
    showNav()
    function showTab() {
        var tab = document.getElementById("tab");
        tab.style.display = "block";
    }
    showTab()



</script>

{{#if isTourRegister}}
<script>
    function showRegisterSucceed() {
        var element = document.getElementById("popupregister");
        console.log(element)
        element.style.visibility = "visible";
        element.style.opacity = 1;
    }
    showRegisterSucceed()

</script>

{{/if}}